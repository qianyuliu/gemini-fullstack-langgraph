# ===========================================
# LLM Configuration
# ===========================================

# DeepSeek API (required)
DEEPSEEK_API_KEY=""

# LangSmith API (required - for LangGraph monitoring and deployment)
LANGSMITH_API_KEY=""

# ===========================================
# Search Engine Configuration (required)
# ===========================================

# Search engine selection
SEARCH_ENGINE="serper"

# Serper API Key (required - for web search)
SERPER_API_KEY=""

# ===========================================
# RAG Configuration
# ===========================================

# Enable RAG functionality
RAG_PROVIDER="ragflow"

# RAGFlow connection configuration
RAGFLOW_API_URL="http://localhost:9380"
RAGFLOW_API_KEY=""

# ===========================================
# Logging Configuration (new)
# ===========================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable console logging
LOG_CONSOLE=true
# Enable file logging
LOG_FILE_ENABLED=true

# Log file path (optional, default: logs/rag_system.log)
LOG_FILE=logs/rag_system.log

# ===========================================
# Development Configuration
# ===========================================

# Environment setting
ENV=development

# Debug mode
DEBUG=true
